{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es6",
    "outDir": "./build",
    "rootDir": "./src",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node10",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}